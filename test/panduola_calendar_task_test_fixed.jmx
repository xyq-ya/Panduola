          <elementProp name="HTTPsampler.Arguments" elementType="Arguments">
            <collectionProp name="Arguments.arguments">
              <elementProp name="" elementType="HTTPArgument">
                <boolProp name="HTTPArgument.always_encode">false</boolProp>
                <stringProp name="Argument.value">{&quot;title&quot;:&quot;性能测试主任务&quot;,&quot;description&quot;:&quot;由JMeter创建&quot;,&quot;creator_id&quot;:1,&quot;assigned_type&quot;:&quot;personal&quot;,&quot;assigned_id&quot;:2,&quot;start_time&quot;:&quot;2025-12-18 09:00:00&quot;,&quot;end_time&quot;:&quot;2025-12-25 18:00:00&quot;,&quot;image_url&quot;:&quot;&quot;}</stringProp>
